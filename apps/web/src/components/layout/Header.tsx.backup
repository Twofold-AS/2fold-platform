'use client';
import Link from 'next/link';
import { useState, useEffect } from 'react';

export default function Header() {
  const [isScrolled, setIsScrolled] = useState(false);

  useEffect(() => {
    const handleScroll = () => {
      setIsScrolled(window.scrollY > 50);
    };
    window.addEventListener('scroll', handleScroll);
    return () => window.removeEventListener('scroll', handleScroll);
  }, []);

  return (
    <nav className={`fixed top-0 w-full z-50 transition-all duration-300 ${
      isScrolled 
        ? 'bg-twofold-dark/90 backdrop-blur-md border-b border-twofold-accent/20' 
        : 'bg-transparent'
    }`}>
      <div className="max-w-7xl mx-auto px-6 py-4">
        <div className="flex items-center justify-between">
          <Link href="/" className="text-2xl font-bold text-twofold-cream hover:scale-105 transition-transform nav-logo">
            Twofold
          </Link>
          
          <div className="hidden md:flex items-center space-x-8">
            <Link href="#tjenester" className="text-twofold-accent hover:text-twofold-cream transition-colors nav-link">
              Tjenester
            </Link>
            <Link href="#plattform" className="text-twofold-accent hover:text-twofold-cream transition-colors nav-link">
              Plattform
            </Link>
            <Link href="#cases" className="text-twofold-accent hover:text-twofold-cream transition-colors nav-link">
              Cases
            </Link>
            <Link 
              href="#kontakt" 
              className="bg-twofold-cream text-twofold-dark px-6 py-2 rounded-full transition-all hover:scale-105 hover:shadow-lg hover:shadow-twofold-cream/20 nav-cta font-semibold"
            >
              Ta kontakt
            </Link>
          </div>
          
          {/* Mobile menu button */}
          <button className="md:hidden text-twofold-cream">
            <svg className="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path strokeLinecap="round" strokeLinejoin="round" strokeWidth={2} d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </button>
        </div>
      </div>
    </nav>
  );
}
